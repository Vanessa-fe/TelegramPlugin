# --- Core infrastructure ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/telegram_plugin?schema=public
REDIS_URL=redis://localhost:6379

# --- API (NestJS) ---
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3001
LOG_LEVEL=debug
ACCESS_LATENCY_ALERT_MS=2000
DATA_EXPORT_DIR=./exports

# --- Auth ---
JWT_ACCESS_SECRET=your-32-byte-access-secret-here
JWT_REFRESH_SECRET=your-32-byte-refresh-secret-here
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800
COOKIE_SECRET=your-64-byte-cookie-secret-in-hex-format

# --- Frontend (Next.js) ---
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# --- Payments ---
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_APPLICATION_FEE_PERCENT=0
STRIPE_CONNECT_RETURN_URL=http://localhost:3000/dashboard/billing
STRIPE_CONNECT_REFRESH_URL=http://localhost:3000/dashboard/billing
STRIPE_CHECKOUT_SUCCESS_URL=http://localhost:3000/checkout/success
STRIPE_CHECKOUT_CANCEL_URL=http://localhost:3000/checkout/cancel
PAYMENT_GRACE_PERIOD_DAYS=5
AUDIT_LOG_RETENTION_DAYS=400
PAYMENT_EVENT_RETENTION_DAYS=730

# --- Telegram bot ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# --- Telegram Stars payments ---
# Secret for authenticating Telegram Stars API requests (required in production)
TELEGRAM_STARS_WEBHOOK_SECRET=your_random_secret_here
# API URL for Telegram Stars service (defaults to NEXT_PUBLIC_API_URL)
# TELEGRAM_STARS_API_URL=http://localhost:3000
# Conversion rate: how many cents = 1 Telegram Star (default: 2, meaning $1 = 50 stars)
# TELEGRAM_STARS_CONVERSION_RATE=2

# --- Brevo (Email notifications) ---
# Get your API key from https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-your-brevo-api-key
BREVO_FROM_EMAIL=noreply@yourdomain.com
BREVO_FROM_NAME=Telegram Plugin

# --- Misc ---
NODE_ENV=development
